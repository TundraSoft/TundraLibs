{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "lint": {
    "include": [
      "./"
    ],
    "exclude": [
      "*/testdata/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
      ]
    }
  },
  "fmt": {
    "include": ["./"],
    "exclude": ["*/testdata/"],
    "semiColons": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "build": "deno fmt && deno lint && deno cache --reload ./dependencies.ts",
    "test": "deno task build && deno cache --reload ./dev.dependencies.ts && deno test -A"
  },
  "test": {
    "include": [
      "./"
    ],
    "exclude": [
      "*/testdata/"
    ]
  },
  "lock": false
}
