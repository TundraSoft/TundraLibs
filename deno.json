{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "importMap": "import_map.json",
  "lint": {
    "files": {
      "include": [
        "./"
      ],
      "exclude": [
        "*/testdata/*"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "./"
      ],
      "exclude": [
        "*/testdata/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "tasks": {
    "build": "deno fmt && deno lint && deno cache --reload ./dependencies.ts",
    "test": "deno task build && deno test -A"
  },
  "test": {
    "files": {
      "include": [
        "./"
      ],
      "exclude": [
        "*/testdata/"
      ]
    }
  }
}
