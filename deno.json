{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.window"
    ],
    "strict": true,
    "experimentalDecorators": true
  },
  "unstable": ["fs", "net"],
  "lint": {
    "include": [
      "./"
    ],
    "exclude": [
      "*/testdata/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": []
    }
  },
  "fmt": {
    "include": ["./"],
    "exclude": ["*/testdata/"],
    "semiColons": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "clean": "deno fmt && deno lint && deno check **/*.ts",
    "cache": "deno cache --reload ./dependencies.ts ./dev.dependencies.ts",
    "test": "deno test -A --parallel --unstable-fs --unstable-net",
    "bench": "deno bench -A --unstable-fs"
  },
  "test": {
    "include": [
      "./"
    ],
    "exclude": [
      "*/testdata/"
    ]
  },
  "lock": false
}
